<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <View android:id="@+id/separator"
        android:background="@color/MockupRedText"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_margin="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pratiquer du sport : "
                android:textColor="@color/MockupRedText"
                android:id="@+id/PratiquerDuSport"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="3 jours/semaine"
                android:textColor="@color/MockupBlueBack"
                android:id="@+id/JoursSemaine"
                android:layout_gravity="center_horizontal"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="30min"
                android:textColor="@color/MockupBlueBack"
                android:id="@+id/Duree"
                android:layout_gravity="center_horizontal"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/MockupRedText"
                android:orientation="vertical"
                android:layout_weight="0.3"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/layoutRouge">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_row="0"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:background="@drawable/ic_fleche_bleu_bas"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/img0" />
                    <ImageView
                        android:background="@drawable/ic_fleche_bleu_bas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/img1" />
                    <ImageView
                        android:background="@drawable/ic_fleche_bleu_bas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/img2" />
                    <ImageView
                        android:background="@drawable/ic_fleche_bleu_bas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/img3" />
                    <ImageView
                        android:background="@drawable/ic_fleche_bleu_bas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/img4" />
                    <ImageView
                        android:background="@drawable/ic_fleche_bleu_bas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/img5" />
                    <ImageView
                        android:background="@drawable/ic_fleche_bleu_bas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:id="@+id/img6" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_row="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="L"
                        android:id="@+id/Lundi"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="M"
                        android:id="@+id/Mardi"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="M"
                        android:id="@+id/Mercredi"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="J"
                        android:id="@+id/Jeudi"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="V"
                        android:id="@+id/Vendredi"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="S"
                        android:id="@+id/Samedi"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="D"
                        android:id="@+id/Dimanche"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/MockupBlueBack"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:id="@+id/layoutBleu">

                <!-- Information suivant le jour de la semaine avec deux fragments -->
                <!-- Le premier affiche la date des jours avec le sport, le deuxième la description des éléments -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v4.view.ViewPager
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/MonProgrammePagerAdapter"
                            android:layout_weight="0.9">

                        </android.support.v4.view.ViewPager>

                        <com.cepheuen.progresspageindicator.ProgressPageIndicator
                            android:id="@+id/pageIndicator"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:dotGap="2dp"
                            app:fillColor="@color/MockupRedText"
                            app:radius="8dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:showDividers="middle"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_weight="0.1" />
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>