<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/relativeLayout"
    tools:context=".activity.Activity_Wear_Main"
    tools:deviceIds="wear_square"
    android:padding="12dp"
    android:background="#FFFFFF">

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cpb_background_progressbar_color="#FFFFFF"
        app:cpb_background_progressbar_width="0dp"
        app:cpb_progressbar_width="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:rotation="-45"
        android:id="@+id/circularProgressBar" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ecranCercle"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.5">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/LinearBleu"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_cercle_bleu"
                android:background="@drawable/circle_bleu"

                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/LinearYellow"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_cercle_yellow"
                android:background="@drawable/circle_yellow"
                android:layout_centerInParent="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/LinearRed"
            android:gravity="center_vertical|center_horizontal"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_cercle_red"
                android:background="@drawable/circle_red"
                android:layout_centerInParent="true"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="100"
            android:gravity="center_vertical|center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:padding="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgStatus"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_pause_circle_filled_black_48dp" />

    </RelativeLayout>




</RelativeLayout>
